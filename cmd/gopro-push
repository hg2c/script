#!/usr/bin/env bash
MOVIE_RSYNC_OPTS="-rltDv --exclude=.DS_Store --exclude=@eaDir"
# MOVIE_RSYNC_OPTS+=" --dry-run"

GOPRO_LOCAL=/Users/luotao/Movies/GoPro/
GOPRO_REMOTE=thresh:/volume1/video/family/gopro/

run rsync $MOVIE_RSYNC_OPTS $GOPRO_LOCAL $GOPRO_REMOTE
run rsync $MOVIE_RSYNC_OPTS \
    /Users/luotao/Movies/xy/ \
    thresh:/volume1/video/family/xy/
